        print "Computer Player B guesses it was %s, with the %s, in the %s." % (suspect_selection_b.name, weapon_selection_b.name, next_room_b.name)

        #Now it will check against your hand.

        print "Please indicate which clue you would like to share."
        print """
        1. %s
        2. %s
        3. %s
        4. I don't have any of those clues

        """ % (suspect_selection_b.name, weapon_selection_b.name, next_room_b.name)

        selection = input(">  ")
        if selection == 1:
            print "You showed Player B %s." % suspect_selection_b.name
            self.gathered_clues_b.append(suspect_selection_b)
        elif selection == 2:
            print "You showed Player B %s." % weapon_selection_b.name
            self.gathered_clues_b.append(weapon_selection_b)
        elif selection == 3:
            print "You showed Player B %s." % next_room_b.name
            self.gathered_clues_b.append(next_room_b)
        else:

            check = randint(0,2)
            ans = "n"
            if check == 0:
                if suspect_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(suspect_selection_b)
                    ans = "y"
                elif weapon_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(weapon_selection_b)
                    ans = "y"
                elif next_room_b in self.computer_a_hand:
                    self.gathered_clues_b.append(next_room_b)
                    ans = "y"
            elif check == 1:
                if weapon_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(weapon_selection_b)
                    ans = "y"
                elif next_room_b in self.computer_a_hand:
                    self.gathered_clues_b.append(next_room_b)
                    ans = "y"
                elif suspect_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(suspect_selection_b)
                    ans = "y"

            else:
                if next_room_b in self.computer_a_hand:
                    self.gathered_clues_b.append(next_room_b)
                    ans = "y"
                elif suspect_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(suspect_selection_b)
                    ans = "y"
                elif weapon_selection_b in self.computer_a_hand:
                    self.gathered_clues_b.append(weapon_selection_b)
                    ans = "y"

            if ans == "y":
                print "Computer Player A has revealed a clue to Computer Player B."

            else:
                if suspect_selection_b not in computer_b_hand:
                    answers_b.append(suspect_selection_b)
                if weapon_selection_b not in computer_b_hand:
                    answers_b.append(weapon_selection_b)
                if next_room_b not in computer_b_hand:
                    answers_b.append(next_room_b)

            if len(self.answers_b) == 3:
                print "Computer B would like to make an accusation."
                if self.murderer in answers_b and self.murder_weapon in answers_b and self.crime_scene in answers_b:
                    print "Congrats Player B! You are correct"
                    print "It was %s, with the %s, in the %s." % (self.murderer.name, self.murder_weapon.name, self.crime_scene.name)
                    exit
                else:
                    print "There was an ERROR. Go Get That BUG HAYLEY."
                    exit

            return next_room_b

    def player_move(self, next_room):

        
        roll = randint(0,5) + 1
        print "You rolled a %d" % roll

        prev_room = next_room

        if roll == 1 or roll == 2:
            next_room = rooms[randint(0, len(rooms)-1)]
            while prev_room == next_room:
                next_room = rooms[randint(0, len(rooms)-1)]
            print "You proceed to %s" % next_room.name

        elif roll == 3 or roll == 4:

            option_a = rooms[randint(0, len(rooms)-1)]

            option_b = rooms[randint(0, len(rooms)-1)]

            while option_a == prev_room or option_b == prev_room or option_a == option_b:
                option_a = rooms[randint(0, len(rooms)-1)]
                option_b = rooms[randint(0, len(rooms)-1)]

            print "You may go to the %s or the %s." % (option_a.name, option_b.name)
            print "To proceed to the %s, enter 1." % option_a.name
            print "To proceed to the %s, enter 2." % option_b.name

            selection = input("> ")

            if selection == 1:
                next_room = option_a
                print "You proceed to the %s." % option_a.name
            elif selection == 2:
                next_room = option_b
                print "You proceed to the %s." % option_b.name
            else:
                print "You entered an invalid key. I will select for you."
                next_room = option_a
                print "You proceed to the %s." % option_a.name

        else:

            option_a = rooms[randint(0, len(rooms)-1)]

            option_b = rooms[randint(0, len(rooms)-1)]

            while option_a == prev_room or option_b == prev_room or option_a == option_b:
                option_a = rooms[randint(0, len(rooms)-1)]
                option_b = rooms[randint(0, len(rooms)-1)]

            option_c = rooms[randint(0, len(rooms)-1)]

            while option_c == prev_room or option_c == option_a or option_c == option_b:
                option_c = rooms[randint(0, len(rooms)-1)]

            print "You may go to the %s, or the %s, or the %s." % (option_a.name, option_b.name, option_c.name)
            print "To proceed to the %s, enter 1." % option_a.name
            print "To proceed to the %s, enter 2." % option_b.name
            print "To proceed to the %s, enter 3." % option_c.name

            selection = input("> ")

            if selection == 1:
                next_room = option_a
                print "You proceed to the %s." % option_a.name
            elif selection == 2:
                next_room = option_b
                print "You proceed to the %s." % option_b.name
            elif selection == 3:
                next_room = option_c
                print "You proceed to the %s." % option_c.name
            else:
                print "You entered an invalid key. I will select for you."
                next_room = option_a
                print "You proceed to the %s." % option_a.name

        return next_room

    def computer_a_move(self, next_room_a):
        prev_room_a = next_room_a
        next_room_a = rooms[randint(0, len(rooms)-1)]
        while next_room_a == prev_room_a:
            next_room_a = rooms[randint(0, len(rooms)-1)]

        print "Computer Player A has proceeded to the %s" % next_room_a.name

        suspect_selection_a = suspects[randint(0, len(suspects)-1)]
        while suspect_selection_a in self.computer_a_hand:
            suspect_selection_a = suspects[randint(0, len(suspects)-1)]

        weapon_selection_a = weapons[randint(0, len(weapons)-1)]
        while weapon_selection_a in self.computer_a_hand:
            weapon_selection_a = weapons[randint(0, len(weapons)-1)]

        print "Computer Player A guesses it was %s, with the %s, in the %s." % (suspect_selection_a.name, weapon_selection_a.name, next_room_a.name)

        #Now it will check against Computer Player B

        check = randint(0,2)
        ans = "n"
        if check == 0:
            if suspect_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(suspect_selection_a)
                ans = "y"
            elif weapon_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(weapon_selection_a)
                ans = "y"
            elif next_room_a in self.computer_b_hand:
                self.gathered_clues_a.append(next_room_a)
                ans = "y"
        elif check == 1:
            if weapon_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(weapon_selection_a)
                ans = "y"
            elif next_room_a in self.computer_b_hand:
                self.gathered_clues_a.append(next_room_a)
                ans = "y"
            elif suspect_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(suspect_selection_a)
                ans = "y"

        else:
            if next_room_a in self.computer_b_hand:
                self.gathered_clues_a.append(next_room_a)
                ans = "y"
            elif suspect_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(suspect_selection_a)
                ans = "y"
            elif weapon_selection_a in self.computer_b_hand:
                self.gathered_clues_a.append(weapon_selection_a)
                ans = "y"

        if ans == "y":
            print "Computer Player B has revealed a clue to Computer Player A."

        else:
            print "Computer Player A has guessed %s, with the %s, in the %s" % (suspect_selection_a.name, weapon_selection_a.name, next_room_a.name)
            print "Please indicate which clue you would like to share."
            print """
            1. %s
            2. %s
            3. %s
            4. I don't have any of those clues

            """ % (suspect_selection_a.name, weapon_selection_a.name, next_room_a.name)
            selection = input(">  ")
            if selection == 1:
                print "You showed Player A %s." % suspect_selection_a.name
                self.gathered_clues_a(suspect_selection_a)
            elif selection == 2:
                print "You showed Player A %s." % weapon_selection_a.name
                self.gathered_clues_a.append(weapon_selection_a)
            elif selection == 3:
                print "You showed Player A %s." % next_room_a.name
                self.gathered_clues_a.append(next_room_a)
            else:
                if suspect_selection_a not in computer_a_hand:
                    answers_a.append(suspect_selection_a)
                if weapon_selection_a not in computer_a_hand:
                    answers_a.append(weapon_selection_a)
                if next_room_a not in computer_a_hand:
                    answers_a.append(next_room_a)

            if len(self.answers_a) == 3:
                print "Computer A would like to make an accusation."
                if self.murderer in answers_a and self.murder_weapon in answers_a and self.crime_scene in answers_a:
                    print "Congrats Player A! You are correct"
                    print "It was %s, with the %s, in the %s." % (self.murderer.name, self.murder_weapon.name, self.crime_scene.name)
                    exit
                else:
                    print "There was an ERROR. Go Get That BUG HAYLEY."
                    exit

    def computer_b_move(self, next_room_b):

        prev_room_b = next_room_b
